void testIncDec[] [
    integer myInt.
    disp <- "Testing increment and decrement statements...\n".
    myInt = 10.
    myInt++.
    if (myInt == 11) {
        disp <- "Increment: PASSED\n".
    } else {
        disp <- "Increment: FAILED\n".
    }

    myInt = 50.
    myInt--.
    if (myInt == 49) {
        disp <- "Decrement: PASSED\n".
    } else {
        disp <- "Decrement: FAILED\n".
    }
]

